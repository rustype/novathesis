%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Draw the cover page
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


% Author name
\ntaddtocover{1,2}{c}{0cm}{%
  \ntcoverbackground
  \fontsize{14}{14}\selectfont
  \textbf{\theauthorname}
}

% Academic qualifications
\ntaddtocover{1,2}{c}{0.25cm}{%
  \fontsize{11}{11}\selectfont
  \theauthordegree
}

% % Title of Dissertation
\ntaddtocover{1,2}{c}{4.5cm}{%
  \fontsize{16}{16}\selectfont
  \textbf{\thecovertitle}
}

% Degree
\ntaddtocover{1,2}{c}{1.5cm}{%
  \fontsize{11}{11}\selectfont
  \thepresentationtext
}

% Advisers
\ntaddtocover{1,2}{c}{2}{%
  \fontsize{12}{12}\selectfont
  \ntprintadvisers
}


% Committee — only print the committee for the main classes
\ntaddtocover{1,2}{r}{2}{%
  \fontsize{10}{10}\selectfont%
  \ntprintcommittee%
}


% Date
\ntaddtocover{1,2}{c}{4}{%
  \fontsize{11}{11}\selectfont
  \ifdraftdoc
    \textbf{DRAFT: \today}
  \else
    \textbf{\thentdatemonth, \thentdateyear}
  \fi
}
